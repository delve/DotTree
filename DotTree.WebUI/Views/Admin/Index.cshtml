@model IEnumerable<DotTree.Domain.Entities.Family>

@{
    ViewBag.Title = "Admin: All Families";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading"><h3>All Families</h3></div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Name</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.Id</td>
                    <td>
                        @Html.ActionLink(item.FamilyName,"EditFamily",new{ familyId = item.Id }) <br />
                        @item.Description
                    </td>
                    <td class="text-center">
                        @using(Html.BeginForm("DeleteFamily", "Admin"))
                        {
                            @Html.Hidden("familyId", item.Id)
                            <input type="submit" class="btn btn-default btn-xs" value="Delete" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add a new family", "CreateFamily", null, new { @class = "btn btn-default" })
        @Html.ActionLink("Add a new person", "CreatePerson", null, new { @class = "btn btn-default" })
    </div>
</div>